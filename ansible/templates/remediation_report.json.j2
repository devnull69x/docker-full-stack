    {% for check in remediation_results %}
    "{{ check }}"{% if not loop.last %},{% endif %}
    {% endfor %}
  ],
  "pending_issues": [
    {% for issue in pending_issues %}
    "{{ issue }}"{% if not loop.last %},{% endif %}
    {% endfor %}
  ]
}